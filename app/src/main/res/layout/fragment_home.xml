<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/popular_cv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:text="@string/popular_game"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descrip_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="32dp"
        android:maxLines="3"
        android:text="@string/descrip_title"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@id/popular_cv" />

    <androidx.cardview.widget.CardView
        android:id="@+id/img_content_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="26dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintTop_toTopOf="@id/descrip_cv">

        <ImageView
            android:id="@+id/image_content_cv"
            android:layout_width= "match_parent"
            android:layout_height="222dp"
            android:src="@drawable/img_home1"
            android:contentDescription="@string/image_home" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/top_news_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_content_cv"
        android:text="@string/top_news"
        android:textSize="18sp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="32dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/img_content_top_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="26dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintTop_toTopOf="@id/top_news_cv">

        <ImageView
            android:id="@+id/image_content_top_cv"
            android:layout_width= "match_parent"
            android:layout_height="222dp"
            android:src="@drawable/img_home2"
            android:contentDescription="@string/image_home" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/img_content_top1_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="26dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintTop_toTopOf="@id/img_content_top_cv">

        <ImageView
            android:id="@+id/image_content_top1_cv"
            android:layout_width= "match_parent"
            android:layout_height="222dp"
            android:src="@drawable/img_home3"
            android:contentDescription="@string/image_home" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>





</ScrollView>